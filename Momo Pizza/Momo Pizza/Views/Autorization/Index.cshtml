
@{
    ViewData["Title"] = "Index";
}

@{
    <!DOCTYPE html>
    <html lang="ru">
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="~/css/autorization.css">
        <script defer src="~/js/autorization.js"></script>
        <title>Авторизация</title>
    </head>
    <body>
        <div class="container">
            <form id="form" class="form">
                <h2>АВТОРИЗАЦИЯ</h2>
                <div class="form-control">
                    <label for="email">Логин</label>
                    <input type="text" id="email" placeholder="Введите ваш логин" />
                </div>
                <div class="form-control">
                    <label for="password">Пароль</label>
                    <input type="password" id="password" placeholder="Введите ваш пароль" />
                    <small>Сообщение об ошибке</small>
                </div>
                <button type="submit">Войти</button>
                <a class="registrtion" href="~/Registration/Index">Зарегистрироваться</a>
            </form>            
        </div>
    </body>
    </html>
}


