
@{
    ViewData["Title"] = "Index";
}


    <!DOCTYPE html>
    <html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Конструктор пиццы</title>
        <link rel="stylesheet" href="~/css/maker.css">
        <script src="~/js/maker.js" defer="defer"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    </head>
    <body>
    @{
        
            <main>              

                <div class="container">
                    <h2>Пицца-Мэйкер</h2>
                    <div class="pizza-container">
                        <canvas id="pizza-canvas"></canvas>
                        <div class="price-container"></div>
                    </div>

                    <div class="start_ingridients">
                        <div class="main_item">
                            <h3>Тесто</h3>
                            <select id="dough">
                                    <option> -- Выберите тесто -- </option>
                                    <option value="4">Итальянское тесто</option>
                                    <option value="6">Нью-йоркское тесто</option>
                            </select>
                        </div>
                        <div class="main_item">
                            <h3>Соус</h3>
                            <select id="sauce">
                                    <option> -- Выберите соус -- </option>
                                    <option value="8">Томатный соус</option>
                                    <option value="3">Сырный соус</option>
                                    <option value="4">Соус Песто</option>
                            </select>
                        </div>
                    </div>
                   
                    <div class="ingridient_label">
                        <h3><span>Ингредиенты</span></h3>
                    </div>
                    <div class="ingredient-list">
                        <ul>
                        @{
                            using (ApplicationContext db = new ApplicationContext())
                            {
                                foreach (Ingredient ing in db.Ingredients)
                                {
                                    <li class="ingredient">
                                        <input type="checkbox" id="@ing.IngredientId">
                                        <label for="@ing.IngredientId">
                                            <img src="~/css/Ingredients/@ing.Photo" alt="@ing.Name">                                      
                                        </label>
                                        <div class="ingredient-info">
                                            <span class="ingredient-name">@ing.Name</span>
                                           
                                            <input type="number" value="1" min="1" max="9">
                                        </div>
                                    </li>
                                }
                            }
                            }
                        </ul>
                    </div>
                    <button class="add-to-cart-btn">В корзину</button>
                </div>
            </main>
             
    }
            
    </body>
</html>


